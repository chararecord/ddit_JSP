		WITH CARTVIEW AS (
		    SELECT CART_PROD
		        , MEM_ID, MEM_NAME, MEM_HP, MEM_MAIL, MEM_MILEAGE
		    FROM CART INNER JOIN MEMBER ON (CART_MEMBER = MEM_ID)
		)
		SELECT
		PROD_ID
		, PROD_NAME
		, PROD_LGU
		, PROD_BUYER
		, PROD_COST
		, PROD_PRICE
		, PROD_SALE
