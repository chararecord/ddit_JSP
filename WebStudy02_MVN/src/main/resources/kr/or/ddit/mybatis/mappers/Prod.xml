		, PROD_QTYSALE
		, PROD_MILEAGE
		, LPROD_NM
		, BUYER_NAME, BUYER_ADD1, BUYER_CHARGER
		, CARTVIEW.*
		FROM PRODVIEW LEFT OUTER JOIN CARTVIEW ON (PROD_ID = CART_PROD)
		WHERE PROD_ID = #{prodId}
